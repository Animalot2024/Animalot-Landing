    // Reemplaza con tu n√∫mero de WhatsApp en formato internacional sin + ni espacios, ej: 584121234567
    const WHATSAPP_NUMBER = 'TU_NUMERO_AQUI';
    const DEFAULT_MSG = encodeURIComponent('Hola! Vengo desde la web de Animalot y quiero m√°s info.');

    function waLink(params = ''){
      const base = `https://wa.me/${WHATSAPP_NUMBER}?text=${DEFAULT_MSG}`;
      return params ? base + encodeURIComponent('\n') + encodeURIComponent(params) : base;
    }

    function track(eventName){
      try{ console.debug('[track]', eventName); }catch(e){}
    }

    document.addEventListener('DOMContentLoaded', () => {
      const links = document.querySelectorAll('[data-wa]');
      links.forEach(a => a.href = waLink(a.dataset.wa || ''));
    });
  </script>
